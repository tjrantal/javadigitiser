<?xml version="1.0" encoding="UTF-8"?>
<!--Import all classes that are needed-->
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<!--Add layout alignment="center"-->
<GridPane fx:controller="timo.home.fxml.FXMLControls" xmlns:fx="http://javafx.com/fxml"
			hgap="5" vgap="5" maxHeight="Infinity" maxWidth="Infinity">
	<padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
	 <!--rotate="-90"-->
	 <Label fx:id="frameLabel" text="Frame No "  GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="0" GridPane.rowSpan="1" GridPane.vgrow="always"/>
	<Slider
		fx:id="frameSlider" value="0" min="0" max="90" orientation="HORIZONTAL" GridPane.vgrow="always"
			showTickLabels="TRUE" showTickMarks="TRUE" blockIncrement="5" majorTickUnit="20" minorTickCount="1"
		 GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="1" GridPane.rowSpan="1">
	</Slider>

	 

	<Button GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="2" GridPane.vgrow="always"
		text="Load Video" onAction="#handleLoadButtonAction">
	</Button>
	
	<Button GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="3" GridPane.vgrow="always"
		text="Next Frame" onAction="#handleFrameButtonAction">
	</Button>
	<Button GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="4" GridPane.vgrow="always"
		text="Close Video" onAction="#handleCloseButtonAction">
	</Button>
	
			 
	<!--VideoView-->
	<ImageView
			GridPane.columnIndex="3" GridPane.columnSpan="6" GridPane.rowIndex="0" GridPane.rowSpan="5"
		    fx:id="videoView"
		    fitWidth="600.0"
		    fitHeight="450.0"
		    pickOnBounds="true"
		    preserveRatio="true"
		>
	</ImageView>
	
</GridPane>

